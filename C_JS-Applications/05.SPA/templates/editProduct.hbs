{{> header}}

<section id="viewEditAd" class="viewEditAd">
        <h1 class="titleForm">Edit existing advertisement</h1>
        <form action="#/edit/{{params.id}}" method="POST" id="formEditAd" class="form">
            <div><input type="hidden" name="id" required /></div>
            <div><input type="hidden" name="publisher" required /></div>
            <div>Title:</div>
            <div><input type="text" name="title" required value="{{title}}" /></div>
            <div>Description:</div>
            <div><textarea name="description" rows="10" required >{{description}}</textarea></div>
            <div>Price:</div>
            <div><input type="number" step="0.01" name="price" required value="{{price}}" /></div>
            <div>Image Url:</div>
            <div><input type="text" name="imageUrl" value="{{imageUrl}}" /></div>
            <div><input type="submit" id="buttonEditAd" value="Edit" /></div>
        </form>
    </section>

{{> footer}}