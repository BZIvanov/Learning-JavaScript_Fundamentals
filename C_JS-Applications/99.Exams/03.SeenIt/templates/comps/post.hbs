<article class="post" data-id="{{_id}}">
  <div class="col rank">
    <span>{{index}}</span>
  </div>
  <div class="col thumbnail">
    <a href="{{url}}" target="_blank">
      <img src="{{imageUrl}}">
    </a>
  </div>
  <div class="post-content">
    <div class="title">
      <a href="{{url}}" target="_blank">
        {{title}}
      </a>
    </div>
    <div class="details">
      <div class="info">
        submitted {{post.creationTime}} ago by {{author}}
      </div>
      <div class="controls">
        <ul>
          <li class="action"><a class="commentsLink" href="#/comments/:{{_id}}">comments</a></li>
          {{#if isAuthor}}
          <li class="action"><a class="editLink" href="#/edit/:{{_id}}">edit</a></li>
          <li class="action"><a class="deleteLink" href="#/catalog/:{{_id}}">delete</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>
</article>