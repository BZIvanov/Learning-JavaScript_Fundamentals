{{> navbar}}

{{#if isLogged}}
    <div id="car-listings">
        <h1>Car Listings</h1>

        <div id="listings">
            {{#each cars}}
                {{> car}}
            {{else}}
                <p class="no-cars">No cars in database.</p>
            {{/each}}
        </div>
    </div>
{{else}}
    <div id="main">
        <div id="welcome-container">
            <h1>Welcome To Car Tube</h1>
            <img src="./styles/images/finance-car.png" alt="carIntro">
            <h2>Login or register to check out our listings or to make one</h2>
            <div id="button-div">
                <a href="#/loginForm" class="button">Login</a>
                <a href="#/registerForm" class="button">Register</a>
            </div>
        </div>
    </div>
{{/if}}

{{> footer}}