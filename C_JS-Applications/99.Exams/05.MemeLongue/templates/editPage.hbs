<div id="edit-meme">
    <form action="#/edit/{{params.id}}" method="POST" >
        <h1>Edit Meme</h1>
        <div class="container">
            <p>Please fill in this form to edit an meme.</p>

            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title" value="{{memeInfo.title}}">

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description" value="{{memeInfo.description}}">

            <p>Meme Image</p>
            <input type="text" placeholder="Enter Meme ImageUrl" name="imageUrl" value="{{memeInfo.imageUrl}}">

            <button type="submit" class="registerbtn">Edit Meme</button>
        </div>
    </form>
</div>

